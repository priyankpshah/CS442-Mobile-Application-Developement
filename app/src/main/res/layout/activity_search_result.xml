<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        android:padding="16dp">

        <TableRow
            android:id="@+id/Row1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/searchResultHeader"
                style="@style/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sort:"
                android:textSize="18dp"
                android:gravity="center_vertical"
                android:layout_span="3"/>

            <Spinner
                android:id="@+id/orderSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#f0dad2"
                android:popupBackground="#f0dad2"
                android:gravity="right"
                android:layout_span="4"/>

        </TableRow>

        <TableRow
            android:id="@+id/Row2"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TextView
                android:id="@+id/column_id"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="id" />
            <TextView
                android:id="@+id/column_zipcode"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="zipcode"/>
            <TextView
                android:id="@+id/column_address"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="address"/>
            <TextView
                android:id="@+id/column_bedrooms"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="beds"/>
            <TextView
                android:id="@+id/column_bathrooms"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="baths"/>
            <TextView
                android:id="@+id/column_square_feet"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="area"/>
            <TextView
                android:id="@+id/column_rent"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="rent"/>
        </TableRow>

    </TableLayout>

    </ScrollView>

    <Button
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Back to Filter" />

</RelativeLayout>